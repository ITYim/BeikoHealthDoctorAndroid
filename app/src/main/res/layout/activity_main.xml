<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <RelativeLayout
            android:id="@+id/rl_tab_index"
            style="@style/MainTabLayoutStyle">

            <ImageView
                android:id="@+id/iv_tab_index"
                style="@style/MainTabImageViewStyle"
                android:src="@drawable/main_tab_index_selector"/>

            <TextView
                style="@style/MainTabTextViewStyle"
                android:layout_below="@id/iv_tab_index"
                android:text="@string/MainIndexTab"/>

            <TextView
                android:id="@+id/tv_unread_index_message_count"
                style="@style/MainTabUnreadCountViewStyle"
                android:layout_alignLeft="@id/iv_tab_index"
                android:layout_alignStart="@id/iv_tab_index"/>

            <View
                android:id="@+id/v_unread_index_message_icon"
                style="@style/MainTabUnreadTipStyle"
                android:layout_alignEnd="@id/iv_tab_index"
                android:layout_alignRight="@id/iv_tab_index"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab_refer"
            style="@style/MainTabLayoutStyle">

            <ImageView
                android:id="@+id/iv_tab_refer"
                style="@style/MainTabImageViewStyle"
                android:src="@drawable/main_tab_index_selector"/>

            <TextView
                style="@style/MainTabTextViewStyle"
                android:layout_below="@id/iv_tab_refer"
                android:text="@string/MainReferTab"/>

            <TextView
                android:id="@+id/tv_unread_refer_message_count"
                style="@style/MainTabUnreadCountViewStyle"
                android:layout_alignLeft="@id/iv_tab_refer"
                android:layout_alignStart="@id/iv_tab_refer"/>

            <View
                android:id="@+id/v_unread_refer_message_icon"
                style="@style/MainTabUnreadTipStyle"
                android:layout_alignEnd="@id/iv_tab_refer"
                android:layout_alignRight="@id/iv_tab_refer"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab_patient"
            style="@style/MainTabLayoutStyle">

            <ImageView
                android:id="@+id/iv_tab_patient"
                style="@style/MainTabImageViewStyle"
                android:src="@drawable/main_tab_index_selector"/>

            <TextView
                style="@style/MainTabTextViewStyle"
                android:layout_below="@id/iv_tab_patient"
                android:text="@string/MainPatientTab"/>

            <TextView
                android:id="@+id/tv_unread_patient_message_count"
                style="@style/MainTabUnreadCountViewStyle"
                android:layout_alignLeft="@id/iv_tab_patient"
                android:layout_alignStart="@id/iv_tab_patient"/>

            <View
                android:id="@+id/v_unread_patient_message_icon"
                style="@style/MainTabUnreadTipStyle"
                android:layout_alignEnd="@id/iv_tab_patient"
                android:layout_alignRight="@id/iv_tab_patient"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab_mine"
            style="@style/MainTabLayoutStyle">

            <ImageView
                android:id="@+id/iv_tab_mine"
                style="@style/MainTabImageViewStyle"
                android:src="@drawable/main_tab_index_selector"/>

            <TextView
                style="@style/MainTabTextViewStyle"
                android:layout_below="@id/iv_tab_mine"
                android:text="@string/MainMineTab"/>

            <TextView
                android:id="@+id/tv_unread_mine_message_count"
                style="@style/MainTabUnreadCountViewStyle"
                android:layout_alignLeft="@id/iv_tab_mine"
                android:layout_alignStart="@id/iv_tab_mine"/>

            <View
                android:id="@+id/v_unread_mine_message_icon"
                style="@style/MainTabUnreadTipStyle"
                android:layout_alignEnd="@id/iv_tab_mine"
                android:layout_alignRight="@id/iv_tab_mine"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
